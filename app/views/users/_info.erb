  <h2>User info</h2>
    <%= attachment_image_tag user, :profile_image, fallback:"no_image.jpg", size:"100x100" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th>
            <%= link_to follows_user_path(user) do %>
              <%= user.active_relationships.count %>
            <% end %>
          </th>
        </tr>
        <tr>
          <th>followers</th>
          <th>
            <%= link_to followers_user_path(user) do %>
              <%= user.passive_relationships.count %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    <% if user == current_user %>
      <div class="row">
        <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
    <% else %>
      <% if user.followed_by?(current_user) %>
        <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-primary mt-3" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success mt-3" %>
      <% end %>
    <% end %>